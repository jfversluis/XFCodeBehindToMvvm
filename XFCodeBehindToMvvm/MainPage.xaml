<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFCodeBehindToMvvm.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="{Binding TitleValue}" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry Margin="20,20" Text="{Binding EntryValue}"/>
        <Button Command="{Binding ChangeTitleCommand}" Text="Update Title" />
    </StackLayout>

</ContentPage>
